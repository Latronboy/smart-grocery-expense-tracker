{
  "name": "smart-grocery-expense-tracker",
  "version": "1.0.0",
  "description": "A full-stack application for managing grocery lists and tracking expenses with both web and mobile interfaces",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "echo \"No build step required for this project\"",
    "lint": "echo \"No linting configured\"",
    "mobile": "cd mobile && npx expo start",
    "mobile:android": "cd mobile && npx expo start --android",
    "mobile:ios": "cd mobile && npx expo start --ios",
    "mobile:web": "cd mobile && npx expo start --web"
  },
  "keywords": [
    "grocery",
    "expense",
    "tracker",
    "react",
    "react-native",
    "nodejs",
    "express",
    "jwt",
    "mobile",
    "web",
    "fullstack"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/smart-grocery-expense-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/smart-grocery-expense-tracker/issues"
  },
  "homepage": "https://github.com/your-username/smart-grocery-expense-tracker#readme",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "cookie-parser": "^1.4.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "nodemonConfig": {
    "ignore": [
      "data/",
      "node_modules/",
      "mobile/"
